<img id="burger-image" src="public\assets\images\louis-hansel-shotsoflouis-d0UEoXDvJ5I-unsplash.jpg" width="1000"
    alt="delicous burger">




<h1 class="heading" style="text-align: center"></h1>Burger time!</h1>

<h2>Welcome hungry ones what shall you choose?</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">

            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    <p>{{this.burger_name}}</p>
                    <button id="devourBtn" data-id={{this.id}} class="gone" type="submit">Devour</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    <h5>It has been devoured!</h5>
                    <p>{{this.burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <form>
        <div class="form-group">
            <div class="row" <label for="ca">Make your selection. </label>
                <input type="text" id="add" name="name" data-eaten="0">
            </div>
            <button id="anotherOne" type="submit">Add</button>
        </div>
    </form>
</div>